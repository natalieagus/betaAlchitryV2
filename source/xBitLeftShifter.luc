module xBitLeftShifter #(
    SHIFT = 8 : SHIFT > -1 & SHIFT < 32,
    SIZE = 32 : SIZE > 0
  )(
    input a[SIZE],
    input doShift,
    input pad,
    output out[SIZE]
  ) {
  
  mux2 shiftUnit[SIZE];
  sig in1ShiftUnit[SIZE];
  
  always {
    
    shiftUnit.s0 = SIZEx{doShift};
    in1ShiftUnit = c{a[SIZE-1-SHIFT:0], SHIFTx{pad}};
    
    repeat(i, SIZE){
       shiftUnit.in[i] = c{in1ShiftUnit[i], a[i]};
    }

    out = shiftUnit.out;
    
  }
}